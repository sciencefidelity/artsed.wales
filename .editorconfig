# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# TypeScript, JavaScript
[*.{ts,tsx,js,jsx}]
indent_style = space
indent_size = 2

# scss
[*.scss]
indent_style = space
indent_size = 2

# json
[*.json]
indent_style = space
indent_size = 2
