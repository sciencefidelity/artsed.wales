    <style>
      @font-face {
        font-family: 'Neue Plak';
        font-size: normal;
        font-weight: 200;
        src: url('/fonts/NeuePlak-UltraLight.woff2') format('woff2');
        font-display: swap;
      }

      @font-face {
        font-family: 'Neue Plak';
        font-size: normal;
        font-weight: 300;
        src: url('/fonts/NeuePlak-Light.woff2') format('woff2');
        font-display: swap;
      }

      @font-face {
        font-family: 'Neue Plak';
        font-size: normal;
        font-weight: 400;
        src: url('/fonts/NeuePlak-Regular.woff2') format('woff2');
        font-display: swap;
      }

      @font-face {
        font-family: 'Neue Plak';
        font-size: normal;
        font-weight: 600;
        src: url('/fonts/NeuePlak-SemiBold.woff2') format('woff2');
        font-display: swap;
      }

      @font-face {
        font-family: 'Neue Plak';
        font-size: normal;
        font-weight: 700;
        src: url('/fonts/NeuePlak-Bold.woff2') format('woff2');
        font-display: swap;
      }

      @font-face {
        font-family: 'Neue Plak';
        font-size: normal;
        font-weight: 800;
        src: url('/fonts/NeuePlak-Black.woff2') format('woff2');
        font-display: swap;
      }

      @font-face {
        font-family: 'briteicons';
        font-size: normal;
        font-weight: 400;
        src: url('/fonts/briteicons.woff2') format('woff2');
        font-display: swap;
      }
    </style>
  </head>
  <body>
    <header>
      <div class="global-header">
        <div class="major">
          <a
            class="eb-logo js-d-track-link"
            href="https://www.eventbrite.co.uk/"
          >
            <i class="ico-eventbrite-wordmark ico--color-brand-orange ico--large"></i>
          </a>
        </div>
        <div class="minor">
          <div class="user-avatar header-link header-exper-large">
            <button aria-label="Search events" class="search-takeover-trigger--react"
                style="border: none; width: 100%; padding: 0; background: transparent;">
              <i class="ico-search-v2 header-search-icon" style="font-size: 19px; padding: 16px 20px; color: #4B4D63;"></i>
            </button>
          </div>
          <div class="gh-dd gh-mobile-menu js-gh-dd">
            <a class="user-avatar header-link js-gh-action header-exper-large">
              <svg viewBox="0 0 24 24" class="menu-icon">
                <path fill-rule="evenodd" clip-rule="evenodd" d="M10 18c0-1.1.9-2 2-2s2 .9 2 2-.9 2-2 2-2-.9-2-2z"></path>
                <circle fill-rule="evenodd" clip-rule="evenodd" cx="12" cy="12" r="2"></circle>
                <circle fill-rule="evenodd" clip-rule="evenodd" cx="12" cy="6" r="2"></circle>
              </svg>
            </a>
          </div>
          <a class="header-link">Sign In</a>
        </div>
      </div>
    </header>
  </body>
</html>

<style global>
  * {
    margin: 0;
    padding: 0;
  }

  body {
    margin: 0;
    padding: 0;
    letter-spacing: normal;
  }

  p {
    margin: 0;
    padding: 0;
  }

  a {
    margin: 0;
    padding: 0;
  }

  body {
    margin: 0;
    padding: 0;
    font-family: 'Neue Plak', sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  a {
    text-decoration: none;
  }

  body .global-header a.header-link, body .global-header button.header-link {
    text-transform: capitalize;
    border: none;
    border-left: none;
    padding-left: 12px;
    padding-right: 12px;
    font-size: 14px;
    letter-spacing: normal;
    border-radius: 0px;
    color: #6F7287;
  }

  .global-header {
    display: flex;
    height: 59px;
    max-width: none;
    width: 100%;
    background-color: #fff;
    border-bottom: 1px solid #EEEDF2;
    z-index: 40000;
    color: #39364F;
    font-size: 14px;
    font-weight: 400;
  }

  .global-header .user-avatar.header-link {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
  }

  .user-avatar {
    position: relative;
    padding-left: 44px;
  }

  .global-header .major {
    flex-grow: 2;
    display: flex;
    float: left;
    background-color: white;
    z-index: 39000;
    border-bottom: 1px solid #EEEDF2;
    height: 59px;
  }

  .global-header .minor {
    display: box;
    display: flex;
    font-size: 0;
  }


  .user-avatar {
    position: relative;
    padding-left: 44px;
    display: flex;
  }

  .ico-eventbrite-wordmark::before {
    content: "";
  }

  .ico-search-v2::before {
    content: "";
  }

  .ico-search-v2 {
    font-size: 19px;
    padding: 16px 20px;
    color: #4B4D63;
  }

  .eb-logo {
    display: block;
    float: left;
    margin: 0px 20px 0 24px;
    width: 110px;
    height: 59px;
  }

  .eb-logo i {
    font-size: 35px;
    line-height: 1.55;
  }

  .eb-logo i::before {
    line-height: 1.55;
  }

  .eb-logo:link i,
  .eb-logo:visited i,
  .eb-logo:hover i,
  .eb-logo:focus i,
  .eb-logo:active i {
    color: #F05537;
  }

  .header-link {
    -webkit-box-align: center;
    -moz-box-align: center;
    box-align: center;
    -webkit-align-items: center;
    -moz-align-items: center;
    -ms-align-items: center;
    -o-align-items: center;
    align-items: center;
    -ms-flex-align: center;
    color: #6F7287;
    display: -webkit-box;
    display: -moz-box;
    display: box;
    display: -webkit-flex;
    display: -moz-flex;
    display: -ms-flexbox;
    display: flex;
    font-size: 14px;
    font-weight: 400;
    height: 59px;
    line-height: 19px;
    vertical-align: top;
    text-transform: capitalize;
    border-left: none;
    padding: 0 20px;
    letter-spacing: normal;
    background-color: #fff;
  }

  .gh-mobile-menu {
    border-bottom: 1px solid #EEEDF2;
    height: 59px;
  }

  .gh-dd {
    position: relative;
    display: inline-block;
  }

  [class^="ico-"], [class*=" ico-"], .ico {
    font-family: briteicons,"Neue Plak",-apple-system,BlinkMacSystemFont,Roboto,"Helvetica Neue",Helvetica,Tahoma,Arial,sans-serif;
    font-weight: 400;
    font-style: normal;
    text-decoration: inherit;
    display: inline;
    vertical-align: baseline;
  }

  .menu-icon {
    width: 24px;
    height: 24px;
  }
</style>
