---
import PortableText from "../components/PortableText"
import { components } from "../components/PortableTextComponents"
const { locale, en, cy } = Astro.props
---

<table
  class="body"
  border="0"
  cellpadding="0"
  cellspacing="0"
>
  <tr class="body__row">
    <td class="body__data">
      <PortableText
        value={locale.newsletter.body}
        components={components}
        />
    </td>
  </tr>
  <tr class="header__row">
    <td class="divider"></td>
  </tr>
</table>

<style lang="scss">
  @use '../styles/vars' as v;

  .body {
    background-color: v.$white;
    &__row {
      display: block;
      padding: 50px 20px;
    }
    &__data p {
      font-family: v.$sans;
      font-weight: 200;
    }
  }
</style>
