---
const { locale, en, cy } = Astro.props
const url = `
  ${locale.settings.url}/${locale.newsletter._type}/${locale.newsletter.slug}
`
---

<table
  class="preheader"
  border="0"
  cellpadding="0"
  cellspacing="0"
>
  <tr class="preheader__row">
    <td class="preheader__data">
      <a href={url} set:html={locale.labels.browser} />
    </td>
  </tr>
</table>

<style lang="scss">
  @use '../styles/vars' as v;

  .preheader {
    width: 100%;
    text-align: center;
    padding: 20px 0;
    &__row {
      font-size: 12px;
    }
    &__data {
      width: 50%;
    }
    a {
      color: v.$darkgray;
      text-decoration: underline;
    }
  }
</style>
