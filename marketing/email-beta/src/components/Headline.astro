---
import { urlFor } from "../lib/utils"
const { locale, en, cy } = Astro.props
---

<table
  class="w-full text-base text-center bg-white"
  style="width: 100%; font-size: 16px; background-color: #FFF;"
  border="0"
  cellpadding="0"
  cellspacing="0"
>
  <thead>
    <tr>
      <td
        class="block p-20 mb-40"
        style="display: block; padding: 20px; margin-bottom: 40px;"
      >
        <h1
          class="m-0 p-0 text-2xl font-500 leading-6"
          style="
            margin: 0px;
            padding: 0px;
            font-weight: 500;
            line-height: 1.5em;
          "
          set:html={locale.newsletter.headline}
        />
      </td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>
        <img
          src={urlFor(locale.newsletter.mainImage)
            .auto("format")
            .width(600)
            .height(400)
            .quality(80)
            .url()}
          class="w-full h-auto"
          style="width: 100%; height: auto;"
          width="600"
          height="400"
          alt="Expressive arts for wellbeing (Key Stage 2)"
        />
      </th>
    </tr>
  </tbody>
</table>
