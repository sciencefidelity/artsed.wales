---
import { urlFor } from "../lib/utils"
const { locale, en, cy } = Astro.props
---

<table
  class="w-full text-base text-center bg-white"
  border="0"
  cellpadding="0"
  cellspacing="0"
>
  <tr>
    <td class="block p-20 mb-40">
      <h1
        class="m-0 p-0 text-2xl font-500 leading-6"
        set:html={locale.newsletter.headline}
      />
    </td>
  </tr>
  <tr>
    <th>
      <img
        src={urlFor(locale.newsletter.mainImage)
          .auto("format")
          .width(600)
          .height(400)
          .quality(80)
          .url()}
        class="w-full h-auto"
        alt="Expressive arts for wellbeing (Key Stage 2)"
        width="600"
        height="400"
      />
    </th>
  </tr>
</table>
