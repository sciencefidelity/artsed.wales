---
import PortableText from "../components/PortableText"
import { components } from "../components/ptComponents"
const { locale, en, cy } = Astro.props
---

<table
  class="bg-white"
  style="background-color: #FFF;"
  border="0"
  cellpadding="0"
  cellspacing="0"
>
  <tbody>
    <tr
      class="block py-50 px-20"
      style="
        display: block;
        padding-top: 50px;
        padding-right: 20px;
        padding-bottom: 50px;
        padding-left: 20px;
      "
    >
      <td>
        <PortableText
          value={locale.newsletter.body}
          components={components}
        />
      </td>
    </tr>
  </tbody>
  <tbody>
    <tr class="block pt-20" style="display: block; padding-top: 20px;">
      <td
        class="block h-5 m-auto bg-color"
        style="
          display: block;
          height: 5px;
          margin: auto;
          background-color: #F4F0E6;
        "
      ></td>
    </tr>
  </tbody>
</table>
