---
const { locale, en, cy } = Astro.props
const url = `
  ${locale.settings.url}/${locale.newsletter._type}/${locale.newsletter.slug}
`
---

<table
  class="w-full py-20 text-center"
  style="
    width: 100%;
    padding-top: 20px;
    padding-bottom: 20px;
    text-align: center;
  "
  border="0"
  cellpadding="0"
  cellspacing="0"
>
  <tbody>
    <tr>
      <td class="w-1/2">
        <a
          href={url}
          class="text-xs text-muted underline font-400"
          style="
            font-size: 12px;
            color: #666666;
            text-decoration: underline;
            font-weight: 400;
          "
          set:html={locale.labels.browser}
        />
      </td>
    </tr>
  </tbody>
</table>
