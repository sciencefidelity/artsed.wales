---
const { locale, en, cy } = Astro.props
const url = `
  ${locale.settings.url}/${locale.newsletter._type}/${locale.newsletter.slug}
`
---

<table
  class="w-full py-20 text-center"
  border="0"
  cellpadding="0"
  cellspacing="0"
>
  <tr>
    <td class="w-1/2">
      <a
        href={url}
        class="text-xs text-muted underline font-400"
        set:html={locale.labels.browser}
      />
    </td>
  </tr>
</table>
