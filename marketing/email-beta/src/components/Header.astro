---
const { locale, en, cy } = Astro.props
---

<table
  class="header w-full py-40 text-lg font-200 leading-6 text-center uppercase tracking-wide bg-white"
  style="
    width: 100%;
    padding-top: 40px;
    padding-bottom: 40px;
    font-size: 18px;
    font-weight: 200;
    line-height: 1.5em;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 0.025em;
    background-color: #FFF;
  "
  border="0"
  cellpadding="0"
  cellspacing="0"
>
  <thead>
    <tr>
      <td>
        <a
          href={locale.settings.url}
          class="no-underline"
          style="text-decoration: none;"
        >
          <img
            src={locale.newsletter.logo}
            class="rounded-full"
            style="border-radius: 9999px;"
            width="150"
            height="150"
            alt="National Arts and Education Network logo"

          />
        </a>
      </td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td
        class="block mt-30 mx-20 mb-60"
        style="
          display: block;
          margin-top: 30px;
          margin-right: 20px;
          margin-bottom: 60px;
          margin-left: 20px;
        "
        set:html={locale.company.title}
      />
    </tr>
    <tr>
      <td
        class="block h-5 m-auto bg-color"
        style="display: block; margin: auto; background-color: #F4F0E6;"
      ></td>
    </tr>
  </tbody>
</table>
