---
import { capitalize } from "../lib/utils"
const { locale, en, cy } = Astro.props
const year = new Date().getFullYear()
---

<table class="w-full pt-40 px-20 mb-40" border="0" cellpadding="0" cellspacing="0">
  <thead>
    <tr>
      <td class="pb-20 text-center">
        {locale.newsletter.social.map(link => (
          <p class="inline" style="font-family:'Helvetica Neue',Helvetica,Arial,Verdana,sans-serif !important; font-size: 16px; font-weight: 400; padding-top: 5px; padding-right: 5px; padding-bottom: 5px; padding-left: 5px; margin: 0px; line-height: 1.5em;">
            <a href={link.url} class="no-underline" style="text-decoration: none; color: #0060BA" set:html={capitalize(link.name)} />
          </p>
        ))}
      </td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td class="w-full text-sm text-center">
        <p style="font-family:'Helvetica Neue',Helvetica,Arial,Verdana,sans-serif !important; font-size: 14px; font-weight: 400; color: #666666; padding-top: 5px; padding-bottom: 5px; margin: 0px; line-height: 1.5em;">
          &copy;{" "}{year}{" "}<span set:html={locale.company.title} />
        </p>
        <p style="font-family:'Helvetica Neue',Helvetica,Arial,Verdana,sans-serif !important; font-size: 14px; font-weight: 400; color: #666666; padding-top: 5px; padding-bottom: 5px; margin: 0px; line-height: 1.5em; letter-spacing: 0.025em;">
          <span set:html={locale.company.address.line1} /> &bull;
          <span set:html={locale.company.address.line2} /> &bull;
          <span set:html={locale.company.address.city} /> &bull;
          <span set:html={locale.company.address.postcode} />
        </p>
      </td>
    </tr>
  </tbody>
</table>
