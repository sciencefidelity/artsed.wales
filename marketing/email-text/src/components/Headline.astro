  <tbody>
    <tr>
      <td class="block mt-20 mb-40">
        <h1 style="font-family:'Helvetica Neue',Helvetica,Arial,Verdana,sans-serif !important; font-size: 25px; margin: 0px; padding: 0px; font-weight: 500; line-height: 1.5; letter-spacing: 0.025em;" set:html={locale.newsletter.headline} />
      </td>
    </tr>
  </tbody>
