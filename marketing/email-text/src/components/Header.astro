---
import { urlFor } from "../lib/utils"
const { locale, en, cy } = Astro.props
---

<table class="header w-full py-40 bg-white text-center" border="0" cellpadding="0" cellspacing="0">
  <tbody>
    <tr>
      <td class="block mt-30 mx-20 mb-60">
        <p style="font-family:'Helvetica Neue',Helvetica,Arial,Verdana,sans-serif !important; font-size: 22px; font-weight: 200; line-height: 1.5em; letter-spacing: 1px;"><a href={en.settings.url} style="color: #0060BA; text-decoration: none;" set:html={en.company.title}></a></p>
      </td>
    </tr>
    <tr>
      <td class="block h-5 m-auto hr-color mx-20"></td>
    </tr>
  </tbody>
</table>
